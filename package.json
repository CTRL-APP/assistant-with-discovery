{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "async": "^2.6.1",
    "dotenv": "^5.0.1",
    "node-sass-chokidar": "^1.3.0",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "replace": "^1.0.0",
    "watson-react-components": "^0.6.9",
    "watson-developer-cloud": "^3.7.0"
  },
  "devDependencies": {
    "codecov": "^3.0.4",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.10.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nock": "^9.4.2",
    "react-scripts": "^1.1.4"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "autofix": "eslint . --fix",
    "build-css": "node-sass-chokidar src/ -o src/",
    "build": "npm run build-css && react-scripts build",
    "codecov": "npm run test && ./node_modules/.bin/codecov",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "start-js": "react-scripts start",
    "test": "istanbul cover ./node_modules/mocha/bin/_mocha tests/**/* -- -R spec",
    "train": "cp .env.example .env && node ./train-conversation.js && node ./train-discovery.js",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive"
  }
}
